.aside{
	width:4rem;
	border-right: 1px solid #ddd;
	font-size: .85rem;
}
.type-nav{
	position: relative;
	padding:.7rem .3rem;
	text-align: center;
	border-bottom: 1px solid #ddd;
	z-index: 10;
}
.type-nav.selected{
	margin-right: -1px;
	padding-left:-1px;
	color: #333;
	background-color: #fff;
}
.content{
	background-color: #fff;
}

.dish{
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
	margin-left: 1rem;
	padding: 1rem;
	border-bottom: 1px solid #ddd;
}
.dish .title{
	display: block;
	font-size: 1rem;
}
.dish p{
	color: orange;
	font-size: .75rem;
}
.dish .add-btn{
	width: 3rem;
	text-align: right;
}

.cart-container{
	display: block;
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	padding: 1rem;
	background:	#87CEEB;
}
/*购物车图标*/
.cart {
	position: absolute;
	top: -8px;
	left: 15px;
	width: 40px;
	height: 40px;
	border-radius: 50%;
	border: 5px solid #4d4d4f;
}
/*红点*/ 
.badge {
	position: absolute;
	right: 4px;
	top: 4px;
	min-width: 12px;
	height: 12px;
	border-radius: 12px;
	background: #ff461d;
	color: white;
	padding: 3px;
	font-size: 12px;
	text-align: center;
	line-height: 14px;
	z-index: 999;
}

.badge-offset {
	top: -8px;
}
/* 结算 */
.pay{
  float: right;
  width: 30%;
	background: rgb(3, 42, 58);
	color: white;
	line-height: 100rpx;
	text-align: center;
  border-radius: 4rpx;
}


/*减号*/
.symbol {
	width: 20px;
	height: 20px;
	margin: 2px 15px;
}

/*普通样式*/ 
.normal{  
    color: black;  
}  
/*禁用样式*/  
.disabled{  
    color: #ccc;  
} 

/*数量*/
.value {
	font-size: 14px;
  display: inline-block;
  width:20rpx;
  color: black;
}