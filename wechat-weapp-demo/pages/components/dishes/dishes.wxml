<view class="container flex-wrap flex-direction-row">
	<!-- left aside -->
	<view class="aside flex-wrap flex-direction-col">
		<block wx:for="{{navList}}">
			<text class="type-nav {{curNav == item.id ? 'selected' : ''}}" bindtap="selectNav" data-index="{{index}}" data-id="{{item.id}}">{{item.name}}</text>
		</block>
	</view>

	<!-- content -->
	<view class="content flex-item">
		<block wx:for="{{dishesList[curIndex]}}">
    <!-- 不冒泡用catchtap事件 -->
			<!-- <view class="dish flex-wrap flex-direction-row" catchtap="selectDish" data-id="{{item.id}}"> -->
      <view class="dish flex-wrap flex-direction-row" data-id="{{item.id}}">
				<view class="flex-item">
					<text class="title">{{item.name}}</text>
					<p>￥{{item.price}}</p>
          <!-- 减号 -->
					<image src="../../../images/subtract.png" class="symbol" bindtap="subtract" wx:if="{{item.id}}>=1" data-food-id="{{item.id}}" />
					<!-- 数量 -->
					<!-- <view class="value" >{{item.num}}</view> -->
          <input type="number" bindchange="bindManual" value="{{item.num}}" class="value"  disabled="disabled"/>
					<!-- 加号 -->
					<image src="../../../images/add.png" class="symbol" bindtap="add" data-food-id="{{item.id}}" />
				</view>
				<view class="add-btn"><icon type="{{item.status ? 'success' : 'circle'}}" color="orange" size="30" bindtap='choosed' data-btn-id="{{item.id}}"></icon></view>
			</view>
		</block>

	</view>

</view>

<!-- cart -->
<view class="cart-container">
	<text class="total badge badge-offset" >购物车：{{cartTotal}}</text>
  <image src="/images/cart.png" class="cart" />
  <text class='pay'>结算</text>
</view>

<loading hidden="{{hidden}}">玩命加载中…</loading>
