.aside{
	width:4rem;
	border-right: 1px solid #ddd;
	font-size: .85rem;
}
.type-nav{
	position: relative;
	padding:.7rem .3rem;
	text-align: center;
	border-bottom: 1px solid #ddd;
	z-index: 10;
}
.type-nav.selected{
	margin-right: -1px;
	padding-left:-1px;
	color: #333;
	background-color: #fff;
}
.content{
	background-color: #fff;
}

.dish{
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
	margin-left: 1rem;
	padding: 1rem;
	border-bottom: 1px solid #ddd;
}
.dish .title{
	display: block;
	font-size: 1rem;
}
.dish p{
	color: orange;
	font-size: .75rem;
}
.dish .add-btn{
	width: 3rem;
	text-align: right;
}

.cart-container{
	display: block;
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	padding: 1rem;
	background:	#87CEEB;
}
/*购物车图标*/
.cart {
	position: absolute;
	top: -8px;
	left: 15px;
	width: 40px;
	height: 40px;
	border-radius: 50%;
	border: 5px solid #4d4d4f;
}
/*红点*/ 
.badge {
	position: absolute;
	left: 57px;
	top: 4px;
	min-width: 12px;
	height: 12px;
	border-radius: 12px;
	background: #ff461d;
	color: white;
	padding: 3px;
	font-size: 12px;
	text-align: center;
	line-height: 14px;
	z-index: 999;
}

.badge-offset {
	top: -8px;
}
/* 结算 */
.pay{
  float: right;
  width: 30%;
	background: rgb(3, 42, 58);
	color: white;
	line-height: 100rpx;
	text-align: center;
  border-radius: 4rpx;
}
/*购物车容器*/
/*弹窗主体*/
.modal-content {
	position: fixed;
	bottom: -235px;
	left: 0;
	width: 100%;
	/*height: 235px;*/
	/*box-shadow: 10rpx 0 30rpx rgba(0,0,0,.9);*/
	margin-top: 5px;
	background: #fff;
	z-index: 99;
}
/*遮罩层*/
.modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0;
}

/*弹窗头部*/
.modal-header {
	font-size: 16px;
	color: #666;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	line-height: 30px;
	padding: 4px 10px;
	background: #eceff1;
}

/*购物车字样*/
.modal-title {
	text-align: center;
	flex: 1;
}

/*关闭按钮*/
.modal-close {
	width: 20px;
	height: 20px;
}

/*内容区域*/
.modal-body {
	font-size: 14px;
	/*height: 145px;*/
	max-height: 295px;
}

.modal-body .item {
	align-items: center;
	border-bottom: 1px solid #eee;
}

/*小计*/
.modal-body .fee {
	color: #ff6000;
	text-align: right;
}

.modal-body .fee:before {
	content: '￥';
}

/*初始隐藏*/
.hidden {
	display: none;
}

/*运行时显示*/
/* .show {
	display: block;
} */


/*减号*/
.symbol {
	width: 20px;
	height: 20px;
	margin: 2px 15px;
}

/*普通样式*/ 
.normal{  
    color: black;  
}  
/*禁用样式*/  
.disabled{  
    color: #ccc;  
} 

/*数量*/
.value {
	font-size: 14px;
  display: inline-block;
  width:20rpx;
  color: black;
}